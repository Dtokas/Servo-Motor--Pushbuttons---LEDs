#include <Servo.h>

const int push1 = 2;
const int push2 = 3;

const int RED = 7;
const int GREEN =6;

const int SERVO_PIN = 9;

Servo myservo;

void setup() {
  myservo.attach(SERVO_PIN);

  pinMode(push1, INPUT);
  pinMode(push2, INPUT);

  pinMode(RED, OUTPUT);
  pinMode(GREEN, OUTPUT);

  myservo.write(0);
  digitalWrite(RED, LOW);
  digitalWrite(GREEN, LOW);
}

void loop() {
  int r1 = digitalRead(push1);
  int r2 = digitalRead(push2);

  if (r1 == HIGH) {
    myservo.write(180);
    digitalWrite(RED, HIGH);
    digitalWrite(GREEN, LOW);
    delay(1000);
  } 
  else if (r2 == HIGH) {
    myservo.write(90);
    digitalWrite(GREEN, HIGH);
    digitalWrite(RED, LOW);
    delay(1000);
  } 
  else {
    myservo.write(0);
    digitalWrite(RED, LOW);
    digitalWrite(GREEN, LOW);
  }
}
